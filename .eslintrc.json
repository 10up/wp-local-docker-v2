{
	"extends": "@10up/eslint-config",
	"env": {
		"es6": true,
		"node": true,
		"jest": true
	},
	"rules": {
		"array-bracket-spacing": [
			"error",
			"always"
		],
		"indent": [
			"error",
			4,
			{
				"SwitchCase": 1
			}
		],
		"no-constant-condition": [
			"error",
			{
				"checkLoops": false
			}
		],
		"no-console": "off",
		"no-empty": [
			"error",
			{
				"allowEmptyCatch": true
			}
		],
		"object-curly-spacing": [
			"error",
			"always"
		],
		"prefer-destructuring": [
			"error",
			{
				"array": false,
				"object": true
			}
		],
		"require-jsdoc": "off",
		"yoda": [
			"error",
			"never"
		],
		"template-curly-spacing": [
			"error",
			"always"
		]
	}
}